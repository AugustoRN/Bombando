@{
    ViewBag.Title = "Form";
}
@model Bombando.Models.UsuarioModel

@using (Html.BeginForm("RegistrarUsuario", "Usuario", FormMethod.Post))
{
    @Html.ValidationMessage("usuario.Invalido")
    @Html.LabelFor(u => u.Nome, "Nome:")
    @Html.TextBoxFor(u => u.Nome, new {@class = "form-control" })
    <br />
    @Html.ValidationMessageFor(u => u.Nome)

    @Html.LabelFor(u => u.Email, "Email:")
    @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
    @Html.ValidationMessageFor(u => u.Email)


    @Html.LabelFor(u => u.Cpf, "Cpf:")
    @Html.TextBoxFor(u => u.Cpf, new { @class = "form-control" })
    @Html.ValidationMessageFor(u => u.Cpf)

    @Html.LabelFor(u => u.Senha, "Senha:")
    @Html.PasswordFor(u => u.Senha, new { @class = "form-control" })
    @Html.ValidationMessageFor(u => u.Senha)


    @Html.LabelFor(u => u.ConfimacaoSenha, "Repetir Senha:")
    @Html.PasswordFor(u => u.ConfimacaoSenha, new { @class = "form-control" })
    @Html.ValidationMessageFor(u => u.ConfimacaoSenha)
    
    <br />
    <input type="submit" value="Enviar" class="btn btn-success" />
}
